#!/usr/bin/env perl
package ubic_admin;

use strict;
use warnings;

# ABSTRACT: ubic administration script

=head1 SYNOPSIS

    ubic-admin setup [--batch-mode] [--quiet] [other options]

=cut

use Pod::Usage;
use Ubic::Admin::Setup;

return 1 if caller;

my $command = shift @ARGV;

if (not defined $command or $command ne 'setup') {
    pod2usage(2);
}

Ubic::Admin::Setup::setup();
